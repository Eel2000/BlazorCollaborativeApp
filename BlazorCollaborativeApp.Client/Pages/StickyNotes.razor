                </li>   *@
        </ul>
    </div>
</div>


@code {
    /// <summary>
    /// The color of the note , its background color.
    /// </summary>
    [Parameter]
    public string? BackGroundColor { get; set; }

    /// <summary>
    /// Data which is a collection of object Sheet.
    /// </summary>
    [Parameter]
    public ObservableCollection<Sheet> Sheets { get; set; } = default!;

    /// <summary>
    /// The Action to call when clicking on delete note.
    /// </summary>
    [Parameter]
    public Action<Sheet> Action { get; set; }
}
