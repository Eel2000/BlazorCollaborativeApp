@using System.Collections.ObjectModel


<div class="container bootstrap snippets bootdey">
    <div class="row">
        <ul class="notes">
            @if (Sheets != null)
            {
                @foreach (var item in Sheets)
                {
                    <li>
                        <div class="rotate-1 @BackGroundColor">
                            <small>@item.EditDate</small>
                            <h4>@item.Title</h4>
                            <p>
                                @foreach (var content in item.Contents.OrderBy(x => x.Line))
                                {
                                    @content.Data
                                    <br />
                                }
                            </p>
                            <a @onclick="(()=>Action(item))" class="text-danger pull-right"><i class="fa fa-trash-o "></i></a>
                        </div>
                    </li>
                }
            }
